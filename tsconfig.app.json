{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": false,
    "rootDir": "./src",
    "outDir": "../../dist/libs/provider-ws-bridge",
    "declarationDir": "../../dist/libs/provider-ws-bridge",
    "tsBuildInfoFile": "../../dist/libs/provider-ws-bridge.tsbuildinfo",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "composite": true,
    "baseUrl": "../../",
    "paths": {
      "@barfinex/types": [
        "libs/types/src"
      ],
      "@barfinex/utils": [
        "libs/utils/src"
      ],
      "@barfinex/utils/*": [
        "libs/utils/src/*"
      ],
      "@barfinex/plugin-driver": [
        "libs/plugin-driver/src"
      ],
      "@barfinex/orders": [
        "libs/orders/src"
      ],
      "@barfinex/connectors": [
        "libs/connectors/src"
      ],
      "@barfinex/key": [
        "libs/key/src"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../plugin-driver"
    },
    {
      "path": "../orders"
    },
    {
      "path": "../connectors"
    },
    {
      "path": "../key"
    }
  ]
}